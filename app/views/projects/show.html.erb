<div class="container">



  <div class="page-header">
    <div class = "pull-right">
      <%= link_to 'Edit', edit_project_path, class: 'btn btn-info' %>
      <%= link_to 'Delete', @project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'  %>
    </div>
    <h1><%= @project.name %></h1>
  </div>

  <ol class="breadcrumb">
    <li><%= link_to "Projects", projects_path(@project) %></li>
    <li><%= @project.name %></li>
  </ol>

  <%= link_to @project.tasks.count.to_s + " Tasks", project_tasks_path(@project) %>
  <br>
  <br>
  <%= link_to @project.memberships.count.to_s + " Memberships", project_memberships_path(@project) %>

</div>
