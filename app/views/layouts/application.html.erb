<!DOCTYPE html>
<html>
  <head>
    <title>Tasky</title>
    <%= stylesheet_link_tag    'application' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <%= favicon_link_tag 'favicon.ico' %>
  </head>
  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Tasky</a>
        </div>
        <ul class="nav navbar-nav navbar-right">
          <% if current_user %>
          <li><%= link_to "#{current_user.first_name} #{current_user.last_name}", user_path(current_user) %></li>
          <li><%= link_to 'Sign out', logout_path %></li>
          <% else %>
          <li><%= link_to 'Sign in', login_path %></li>
          <li><%= link_to 'Sign Up', new_registration_path %></li>
          <% end %>
        </ul>
        <div id="navbar" class="navbar-collapse collapse">
        </div>

        <!--/.navbar-collapse -->
      </div>
    </nav>
    <div class="container">
        <div id="notice">
          <% if flash[:notice] %>
          <div class="alert alert-success text-center">
          <%= flash[:notice] %>
          <% end %>
        </div>
        </div>
    <div class="container">
      <%= yield %>
    <hr>
    <footer>
      <div class="row">

        <div class="col-md-6">
          <a href="/about">About</a>
          |
          <a href="/terms">Terms</a>
          |
          <a href="/faq">FAQ</a>
          |
          <a href="/users">Users</a>
          |
          <a href="/projects">Projects</a>
        </div>

        <div class="col-md-6 text-right">
          <a href="https://www.linkedin.com/in/kennethkto/">
            <%= image_tag("linkedin.jpg", class: "img-footer") %>
          </a>
          <a href="https://github.com/KennethT">
            <%= image_tag("github.png", class: "img-footer") %>
          </a>
          <a href="https://twitter.com/KennethT">
            <%= image_tag("twitter.png", class: "img-footer") %>
          </a>
          <a href="https://students.gschool.it/students/212">
            <%= image_tag("galvanize.png", class: "img-footer") %>
          </a>
        </div>

      </div>

      </div>
    </footer>
    </div>


    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="../../dist/js/bootstrap.min.js"></script>
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="../../assets/js/ie10-viewport-bug-workaround.js"></script>

  </body>
</html>
