<!DOCTYPE html>
<html>
  <head>
    <title>GCampKennethTo</title>
    <%= stylesheet_link_tag    'application' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <%= favicon_link_tag 'favicon.ico' %>
  </head>
  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand"><%= link_to "gCamp", projects_path, class:"navbar-brand" %></a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
              Projects
            </a>
            <% if admin_role %>
            <ul class ="dropdown-menu" role="menu">
              <% Project.all.each do |project| %>
              <li><%= link_to project.name, project_path(project) %></li>
              <% end %>
              <li class ="divider"></li>
              <li><%= link_to "New Project", new_project_path %></li>
            </ul>
            <% else %>
            <ul class ="dropdown-menu" role="menu">
              <% current_user.projects.each do |project| %>
              <li><%= link_to project.name, project_path(project) %></li>
              <% end %>
              <li class ="divider"></li>
              <li><%= link_to "New Project", new_project_path %></li>
            </ul>
            <% end %>
          </li>
          <li><%= link_to "Users", users_path %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if current_user %>
          <li><%= link_to "#{current_user.first_name} #{current_user.last_name}", user_path(current_user) %></li>
          <li><%= link_to 'Sign out', logout_path %></li>
          <% else %>
          <li><%= link_to 'Sign in', login_path %></li>
          <li><%= link_to 'Sign Up', new_registration_path %></li>
          <% end %>
        </ul>

        </div>

        <!--/.navbar-collapse -->
      </div>
    </nav>
    <div class="container">
        <div id="notice">
          <% if flash[:notice] %>
          <div class="alert alert-success text-center">
          <%= flash[:notice] %>
          <% end %>
        </div>
        </div>
    <div class="container">
      <%= yield %>
    <hr>
    <footer>
      <div class="row">

        <div class="col-md-12 text-center">
          <a href="/">Home</a>
          |
          <a href="/about">About</a>
          |
          <a href="/terms">Terms</a>
          |
          <a href="/faq">FAQ</a>
        </div>

      </div>

      </div>
    </footer>
    </div>


    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="../../dist/js/bootstrap.min.js"></script>
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="../../assets/js/ie10-viewport-bug-workaround.js"></script>

  </body>
</html>
