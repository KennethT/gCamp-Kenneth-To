<div class="page-header">
  <h1><%= @project.name %>: Manage Members</h1>
</div>

<ol class="breadcrumb">
  <li><%= link_to "Projects", projects_path %></li>
  <li><%= link_to @project.name, project_path(@project) %></li>
  <li>Memberships</li>
</ol>

<div class="form-group">
  <%= form_for([@project, @membership], html: {class: "well form-inline"}) do |f| %>
  <%= f.collection_select(:user_id, User.all, :id, :full_name, {include_blank: "Please select a user.."}, {class: "form-control"}) %>
  <%= f.select(:role, [["Member", :member],["Owner", :owner]], {include_blank: "Choose Owner or Member"}, {class: "form-control"}) %>

  <input class="btn btn-primary"
    <%= f.submit "Add New Member" %>
  </input>
</div>
<% end %>


<% @project.users.each do |member| %>
  <%= link_to member.full_name, user_path(member) %>
  <%= link_to '', project_membership_path(@project, member), method: :delete, data: { confirm: 'Are you sure?' }, class: 'glyphicon glyphicon-remove'  %>
  <br>
<% end %>
