<%= form_for([@project, @membership], html: {class: "form-horizontal"}) do |f| %>

<%= render "layouts/error", object: @membership %>

<div class="container">


    <div class="form-group row">
      <%= f.label :role, class: "control-label col-md-2" %>
      <div class="form-controls col-md-4">
        <%= f.check_box :role, class: 'form-control' %>
      </div>
    </div>
    

      <div class="form-group row">
        <div class="col-md-offset-2 col-md-4"><%= f.submit :class => "btn btn-primary" %>
          <%= link_to 'Cancel', project_memberships_path, class: 'btn btn-default' %>
        </div>
      </div>

    </div>
  </form>





  <% end %>
