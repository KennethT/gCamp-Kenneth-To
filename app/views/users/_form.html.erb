
<% if @user.errors.any? %>
<div id="error_explanation" class="alert alert-danger col-md-offset-2">
  <h4><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h4>

  <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>


<%= form_for @user do |f| %>

<div class="form-group">
<%= f.label :first_name, class: "control-label col-md-2" %>
<%= f.text_field :first_name, class: "col-md-4" %><br>
</div>
<div class="form-group">
<%= f.label :last_name, class: "control-label col-md-2" %>
<%= f.text_field :last_name, class: "col-md-4" %><br>
</div>
<div class="form-group">
<%= f.label :email, class: "control-label col-md-2" %>
<%= f.email_field :email, class: "col-md-4" %><br>
</div>

<br>


<div class="form-group">
<%= f.submit class:"btn btn-primary col-md-offset-2"%>
<%= link_to 'Cancel', users_path, class:"btn btn-default" %>
</div>



<% end %>
