<p id="notice"><%= notice %></p>
<div class="page-header">
  <div class="pull-right"><%= link_to 'New User', new_user_path, class: 'btn btn-info' %></div>
  <h1>Users</h1>
</div>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th class="col-md-2 col-md-offset-2">Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %> <%= user.last_name %></td>
        <td><%= link_to user.email, user  %></td>
        <td class="text-right"><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-info' %>
            <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
