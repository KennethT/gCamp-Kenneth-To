
<div class="page-header">
  <div class="pull-right"><%= link_to 'New User', new_user_path, class: 'btn btn-info' %></div>
  <h1>Users</h1>
</div>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th class="col-md-2 col-md-offset-2">Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%=  link_to user.first_name, user %> <%= link_to user.last_name, user %></td>
        <td><% if current_user == user %>
          <%= mail_to current_user.email %>
          <% end %></td>
        <td class="text-right"><% if current_user == user%>
          <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-info' %>
                    <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'  %><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
