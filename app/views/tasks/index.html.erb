<div class="page-header">
  <div class="pull-right"><%= link_to 'New Task',  new_project_task_path(@project), class: 'btn btn-info' %></div>
  <h1>Tasks for <%= @project.name %></h1>
</div>

<ol class="breadcrumb">
  <li><%= link_to "Projects", projects_path(@project) %></li>
  <li><%= link_to @project.name, project_path(@project)  %></li>
  <li>Tasks</li>
</ol>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Description</th>
      <th> Due Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project.tasks.each do |task| %>
      <tr>
        <td><%= link_to task.description, project_task_path(@project, task) %> <div class="badge"><%= task.comments.count %></div></td>
        <td><%= task.date.to_s.gsub("-","/") %></td>
        <td class="text-right">
          <%= link_to 'Edit', edit_project_task_path(@project, task), class: "btn btn-info" %>
          <%= link_to project_task_path(@project, task), id: "destroy", method: :delete, data: { confirm: 'Are you sure?' } do %>
          <span class="glyphicon glyphicon-remove" ></span>
          <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
