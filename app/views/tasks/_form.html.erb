<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="container">



<form accept-charset="UTF-8" action="/tasks" class="form-horizontal" id="new_task" method="post">

  <div class="form-group row">
    <%= f.label :description, :class => "control-label col-md-2" %>
    <div class="form-controls col-md-4">
      <%= f.text_field :description, :class => 'form-control', :id => "task_description" %>
    </div>
  </div>


  <div class="form-group row">
    <%= f.label :date, :class => "control-label col-md-2" %>
    <div class="form-controls col-md-4">
      <%= f.date_select :date, :class => 'form-control', :id => 'date' %></div>
    </div>

    <div class="form-group row">
      <% unless @task.new_record? %>
      <div class="control-label col-md-2">
        <label>Completed?</label>
      </div>
      <div class="control-label col-md-4">
        <%= f.check_box :complete %>
      </div>
        <% end %>
    </div>

    <div class="form-group row">
      <div class="col-md-offset-2 col-md-4"><%= f.submit :class => "btn btn-primary" %>
        <%= link_to 'Cancel', tasks_path, class: 'btn btn-default' %>
      </div>
    </div>

  </div>
</form>





<% end %>
