<div class="container">

  <font color>
    <div id="notice">
      <% if flash[:notice] %>
      <div class="alert alert-success text-center">
      <%= flash[:notice] %>
      <% end %>
    </div>
    </div>
  </font>

  <div class="page-header">
    <div class = "pull-right">
      <%= link_to 'Edit', edit_task_path, class: 'btn btn-info' %>
    </div>
    <h1><%= @task.description %></h1>
  </div>

  <ol class="breadcrumb">
    <li><a href="/tasks">Tasks</a></li>
    <li class="active"><%= @task.description %></li>
  </ol>


  <div class="container">
  <strong>Due On</strong>
  <%= @task.date.to_s.gsub("-","/") %>
  </div>


</div>
